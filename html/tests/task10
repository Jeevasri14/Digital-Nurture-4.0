<body>

  <div class="container">
    <h1>Debugging Demo</h1>
    <input type="text" id="userInput" placeholder="Type something..." autofocus />
    <button onclick="processInput()">Process Input</button>
    <div id="output"></div>
  </div>

  <script>
    console.log("Script loaded successfully.");

    function processInput() {
      const input = document.getElementById("userInput").value;
      console.log("User input received:", input);

      // Set a breakpoint here in DevTools or VS Code to inspect 'input' and 'result'
      let result;
      if (input.trim() === "") {
        result = "Please enter some text.";
        console.warn("Empty input received.");
      } else {
        result = `You typed: "${input}" (length: ${input.length})`;
      }

      console.log("Result to display:", result);
      document.getElementById("output").textContent = result;
    }
  </script>

</body>
