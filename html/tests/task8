<!DOCTYPE html>
<html>
<head>
  <title>Save Event Preferences</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 40px;
      background-color: #f9f9f9;
      text-align: center;
    }
    select, button {
      margin: 10px;
      padding: 10px;
      font-size: 16px;
      border-radius: 5px;
    }
    #status {
      margin-top: 15px;
      font-weight: bold;
      color: green;
    }
  </style>
</head>
<body>

  <h2>Select Your Preferred Event Type</h2>

  <select id="eventType" onchange="savePreference()">
    <option value="">-- Choose Event Type --</option>
    <option value="Workshop">Workshop</option>
    <option value="Seminar">Seminar</option>
    <option value="Concert">Concert</option>
    <option value="Meetup">Meetup</option>
  </select>

  <br>
  <button onclick="clearPreferences()">Clear Preferences</button>

  <div id="status"></div>

  <script>
    // Pre-select stored preference on load
    window.onload = function () {
      const savedType = localStorage.getItem("preferredEventType");
      if (savedType) {
        document.getElementById("eventType").value = savedType;
        document.getElementById("status").textContent = `Loaded preference: ${savedType}`;
      }
    };

    // Save selected event type to localStorage
    function savePreference() {
      const selected = document.getElementById("eventType").value;
      if (selected) {
        localStorage.setItem("preferredEventType", selected);
        sessionStorage.setItem("lastEvent", selected);
        document.getElementById("status").textContent = `Preference saved: ${selected}`;
      } else {
        localStorage.removeItem("preferredEventType");
        document.getElementById("status").textContent = `Preference cleared.`;
      }
    }

    // Clear all preferences
    function clearPreferences() {
      localStorage.clear();
      sessionStorage.clear();
      document.getElementById("eventType").value = "";
      document.getElementById("status").textContent = "All preferences cleared.";
    }
  </script>

</body>
</html>
