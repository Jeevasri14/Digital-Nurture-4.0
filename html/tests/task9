<head>
  <title>Find Nearby Events</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #eef;
      padding: 40px;
      text-align: center;
    }
    button {
      padding: 12px 20px;
      font-size: 16px;
      background-color: #007BFF;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    #location {
      margin-top: 20px;
      font-size: 18px;
      color: #333;
    }
    #error {
      color: red;
      margin-top: 15px;
    }
  </style>
</head>
<body>

  <h2>Event Locator</h2>
  <p>Click below to find events near you:</p>
  <button onclick="findNearbyEvents()">Find Nearby Events</button>

  <div id="location"></div>
  <div id="error"></div>

  <script>
    function findNearbyEvents() {
      const locationDiv = document.getElementById("location");
      const errorDiv = document.getElementById("error");

      locationDiv.textContent = "Locating...";
      errorDiv.textContent = "";

      if (!navigator.geolocation) {
        errorDiv.textContent = "Geolocation is not supported by your browser.";
        locationDiv.textContent = "";
        return;
      }

      navigator.geolocation.getCurrentPosition(
        (position) => {
          const lat = position.coords.latitude.toFixed(6);
          const lon = position.coords.longitude.toFixed(6);
          locationDiv.textContent = `Your Coordinates: Latitude ${lat}, Longitude ${lon}`;
        },
        (error) => {
          switch (error.code) {
            case error.PERMISSION_DENIED:
              errorDiv.textContent = "User denied the request for Geolocation.";
              break;
            case error.POSITION_UNAVAILABLE:
              errorDiv.textContent = "Location information is unavailable.";
              break;
            case error.TIMEOUT:
              errorDiv.textContent = "The request to get user location timed out.";
              break;
            default:
              errorDiv.textContent = "An unknown error occurred.";
          }
          locationDiv.textContent = "";
        },
        {
          enableHighAccuracy: true,
          timeout: 10000,
          maximumAge: 0
        }
      );
    }
  </script>

</body>
</html>
